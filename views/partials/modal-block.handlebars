<!-- Service Modal -->
<div id="service-modal" style="display:none;">
    <div class="modal-content">
        <div class="close modalToggle">&times;</div>
        <h4 class="modal-title">Request Service</h4>

        <form class="modal-form">
            <div class="modal-contactInfo">
                <div class="input">
                    <h5 class="modal-subtitle">Business Info</h5>
                    <div>
                        <input name="businessName" placeholder="Business Name" required />
                        <input name="contactName" placeholder="Contact Name" required />
                        <input name="phone" placeholder="Phone #" required />
                    </div>
                </div>

                <div class="input">
                    <h5 class="modal-subtitle">Address</h5>
                    <div>
                        <input name="street1" placeholder="Street address" required />
                        <input name="street2" placeholder="Building or unit #"/>
                        <div class="address">
                            <input name="city" placeholder="City" required />
                            <input name="state" placeholder="State" value="CA" style="text-align:center;"/>
                            <input name="zipcode" placeholder="Zip code"/>
                        </div>
                    </div>
                </div>
            </div>

            <div>
                <p class="modal-subtitle"><strong>Tell us what you need.</strong> Please include how many machines you need
                serviced, their model #s, and a detailed description of the problem you are having.</p>
                <textarea name="issueNotes" required ></textarea>
                <div>
                    <button class="btn" type="submit">Send</button>
                </div>
            </div>
        </form>
    </div>
</div>